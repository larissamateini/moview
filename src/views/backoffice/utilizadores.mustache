{{> partials/backoffice/header }}
<main class="admin-main">
    <div class="admin-header">
        <h1>Gestão de Utilizadores</h1>
    </div>

    <div class="search-container admin-filters">
        <form action="/backoffice/utilizadores" method="GET" style="display:flex; width:100%; gap:20px;">
            <div class="search-input-wrapper" style="flex: 1;">
                <input type="number" name="id_filter" value="{{id_filter}}" placeholder="Pesquisar por ID do Utilizador...">
                <button type="submit"><img src="/public/images/icon-search.svg" alt="Pesquisar"></button>
            </div>

            <select name="role" onchange="this.form.submit()" style="flex: 1;">
                <option value="">Todos os tipos (User / Admin)</option>
                <option value="user" {{#isUserSelected}}selected{{/isUserSelected}}>Comum (User)</option>
                <option value="admin" {{#isAdminSelected}}selected{{/isAdminSelected}}>Administrador (Admin)</option>
            </select>
        </form>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th class="th-id">ID</th>
                    <th class="th-user-name">Nome / Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="th-actions">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                <tr id="user-row-{{id}}"> 
                    <td>#{{id}}</td>
                    <td class="primary-text">
                        {{name}} <br>
                        <small style="color:#888">@{{username}}</small>
                    </td>
                    <td>{{email}}</td>
                    <td>
                        <span class="badge {{#isAdmin}}badge-admin{{/isAdmin}} {{^isAdmin}}badge-user{{/isAdmin}}">
                            {{role}}
                        </span>
                    </td>
                    <td class="actions-cell">
                        {{#isMe}}
                            <span title="Sua conta" style="color: #666; font-size: 0.8rem;">(Tu)</span>
                        {{/isMe}}
                        
                        {{^isMe}}
                            <button class="btn-action btn-delete" onclick="deleteUser('{{id}}')" title="Apagar Utilizador">
                                &#128465;
                            </button>
                        {{/isMe}}
                    </td>
                </tr>
                {{/data}}
                {{^data}}
                <tr>
                    <td colspan="5" style="text-align:center; padding: 40px; color: #888;">
                        Nenhum utilizador encontrado com estes critérios.
                    </td>
                </tr>
                {{/data}}
            </tbody>
        </table>
    </div>
</main>
<script src="/public/js/admin_users.js"></script>
{{> partials/backoffice/footer }}