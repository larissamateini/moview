{{> partials/backoffice/header }}

<main class="admin-main">
    <div class="admin-header">
        <h1>Gestão de Diretores & Atores</h1>
        <a href="/backoffice/diretores-atores/new" class="admin-btn-add">
            <span>+</span> Adicionar
        </a>
    </div>

    <div class="search-container">
        <select id="filter-role">
            <option value="">todos os cargos</option>
            <option value="Ator">Atores</option>
            <option value="Diretor">Diretores</option>
        </select>
    </div>

    <div class="table-container">
        <table id="staff-table">
            <thead>
                <tr>
                    <th class="th-id">ID</th>
                    <th>Nome</th>
                    <th class="th-role">Cargo</th>
                    <th class="th-actions">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                <tr class="staff-row" data-role="{{cargo}}">
                    <td>#{{id}}</td>
                    <td class="primary-text">{{nome}}</td>
                    <td>
                        <span class="badge {{#isDiretor}}badge-diretor{{/isDiretor}} {{#isAtor}}badge-ator{{/isAtor}}">
                            {{cargo}}
                        </span>
                    </td>
                    <td class="actions-cell">
                        <button class="btn-action btn-edit" onclick="editarStaff('{{id}}')">&#9998;</button>
                        <a href="/backoffice/diretores-atores/delete/{{id}}" class="btn-action btn-delete" onclick="return confirm('Eliminar este registo?')">&#128465;</a>
                    </td>
                </tr>
                {{/data}}
                {{^data}}
                <tr><td colspan="4" style="text-align: center;">Nenhum registo encontrado.</td></tr>
                {{/data}}
            </tbody>
        </table>
    </div>
</main>

{{> partials/backoffice/footer }}