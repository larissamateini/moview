{{> partials/backoffice/header }}

<main class="admin-main">
    <div class="admin-header">
        <h1>Gestão de Atores e Diretores</h1>
    </div>

    <!-- Inline Form -->
    <div class="form-container" style="margin-bottom: 20px;">
        <form action="/backoffice/diretores-atores" method="POST" style="display:flex; gap:10px; align-items:flex-end;">
            <div class="form-group" style="flex:1;">
                <label>Nome:</label>
                <input type="text" name="nome" required>
            </div>
            <div class="form-group">
                <label>Cargo:</label>
                <select name="cargo">
                    <option value="Ator">Ator</option>
                    <option value="Diretor">Diretor</option>
                    <option value="Ambos">Ambos</option>
                </select>
            </div>
            <button type="submit" class="btn-submit" style="height:40px;">Adicionar</button>
        </form>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Cargo</th>
                    <th class="th-actions">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                <tr>
                    <td>#{{id}}</td>
                    <td>{{nome}}</td>
                    <td>{{cargo}}</td>
                    <td class="actions-cell">
                        <a href="/backoffice/diretores-atores/delete/{{id}}" class="btn-action btn-delete" onclick="return confirm('Tem certeza?')">&#128465;</a>
                    </td>
                </tr>
                {{/data}}
                {{^data}}
                <tr><td colspan="4">Nenhum registo encontrado.</td></tr>
                {{/data}}
            </tbody>
        </table>
    </div>
</main>

{{> partials/backoffice/footer }}