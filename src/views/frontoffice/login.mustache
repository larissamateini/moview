{{> partials/head_global }}
<body>
    <div class="div-form">
        <h1>LogIn</h1>
        <form action="/login" method="POST">
            {{#error}}
            <div class="error-box" style="background: rgba(255, 0, 0, 0.2); color: #ff6b6b; padding: 10px; border-radius: 5px; margin-bottom: 15px; text-align: center;">
                {{error}}
            </div>
            {{/error}}
            <div class="wrapped-input">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="seuemail@email.com" required>
            </div>

            <div class="wrapped-input">
                <label for="password">Palavra-passe</label>
                <input type="password" id="password" name="password" placeholder="sua palavra-passe" required>
            </div>

            <button type="submit">Entrar</button>
            <p>Ainda não é cadastrado? <a href="/signup">SignUp</a></p>
        </form>
    </div>

    <div class="div-logo">
        <div class="wrapped-logo">
            <img src="/public/images/logo-icon.svg" alt="Logo Moview">
            <p>MO<span>VIEW</span></p>
        </div>
    </div>
</body>
{{> partials/footer_auth }}